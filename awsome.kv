			cols:2
			size_hint_y:None
			size_hint_x:None
			size:(root.width, 1/7*root.height)
			GridLayout:
				cols:1
				Button:
					text:'exp'
					on_press:root.buttonpressnumber('exp')
					background_color:(155/277, 155/277, 155/277, 1)
