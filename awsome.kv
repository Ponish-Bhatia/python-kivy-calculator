<MyLayout>
	GridLayout:
		cols:1
		size:(root.width, root.height)
		GridLayout:
			size_hint_x:None
			size_hint_y:None
			size:(root.width, 1/7*root.height)
			cols:1
			TextInput:
				halign:'right'
				id:potato
		GridLayout:
			cols:4
			Button:
				text:'sqr rt'
				on_press:root.buttonpressnumber('sqr rt')
